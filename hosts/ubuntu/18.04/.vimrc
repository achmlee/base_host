" ~/.vimrc
" === USER MODS ===
set guifont=Lucida_Console
set smartindent             " always set autoindenting on
set shiftwidth=2
set expandtab
set nocompatible
let loaded_matchparen = 1
set noshowmatch             " turn off on the fly paren matching
set nobackup
set writebackup             " backup during write, then delete
set hlsearch
set incsearch               " incremental search
filetype plugin indent on   " enable file type indenting
syntax on
